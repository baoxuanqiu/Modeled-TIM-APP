<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:scaleType="fitXY"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <Button
            android:id="@+id/qrcode_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/qrcode"/>
        <Button
            android:id="@+id/setting_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/setting"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/user_head_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/user_head"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/myname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hello Tim"
            android:textColor="#000000"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.6"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="7dp">
            <LinearLayout
                android:id="@+id/wait_do_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="3.5dp"
                android:layout_alignRight="@+id/view_1"
                android:background="@drawable/shape_2"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/wait_do"
                    android:scaleType="fitXY"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="17sp"
                    android:text="待办"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="14dp"
                    android:text="新建待办事项"
                    android:textSize="12sp"
                    android:textColor="#9D9D9D"/>
            </LinearLayout>
            <View
                android:id="@+id/view_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:id="@+id/schedule_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="3.5dp"
                android:layout_alignLeft="@+id/view_1"
                android:background="@drawable/shape_2"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/schedule"
                    android:scaleType="fitXY"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="17sp"
                    android:text="日程"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="14dp"
                    android:text="查看近期行程安排"
                    android:textSize="12sp"
                    android:textColor="#9D9D9D"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/mailbox_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="3.5dp"
                android:layout_alignRight="@+id/view_2"
                android:background="@drawable/shape_2"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/mailbox"
                    android:scaleType="fitXY"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="17sp"
                    android:text="邮箱"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="14dp"
                    android:text="邮箱收发"
                    android:textSize="12sp"
                    android:textColor="#9D9D9D"/>
            </LinearLayout>
            <View
                android:id="@+id/view_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:id="@+id/telephone_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="3.5dp"
                android:layout_alignLeft="@+id/view_2"
                android:background="@drawable/shape_2"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/telephone"
                    android:scaleType="fitXY"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="17sp"
                    android:text="电话"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="14dp"
                    android:text="快捷联系好友"
                    android:textSize="12sp"
                    android:textColor="#9D9D9D"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/name_card_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="3.5dp"
                android:layout_alignRight="@+id/view_3"
                android:background="@drawable/shape_2"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/name_card"
                    android:scaleType="fitXY"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="17sp"
                    android:text="名片夹"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="14dp"
                    android:text="添加名片"
                    android:textSize="12sp"
                    android:textColor="#9D9D9D"/>
            </LinearLayout>
            <View
                android:id="@+id/view_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:id="@+id/collect_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="3.5dp"
                android:layout_alignLeft="@+id/view_3"
                android:background="@drawable/shape_2"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/collect"
                    android:scaleType="fitXY"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="17sp"
                    android:text="收藏"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="14dp"
                    android:text="文本图片链接语音"
                    android:textSize="12sp"
                    android:textColor="#9D9D9D"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/wallet_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="3.5dp"
                android:layout_alignRight="@+id/view_4"
                android:background="@drawable/shape_2"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/wallet"
                    android:scaleType="fitXY"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="14dp"
                    android:textSize="17sp"
                    android:text="钱包"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="14dp"
                    android:text="余额资金管理"
                    android:textSize="12sp"
                    android:textColor="#9D9D9D"/>
            </LinearLayout>
            <View
                android:id="@+id/view_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="3.5dp"
                android:layout_alignLeft="@+id/view_4">
            </LinearLayout>
        </RelativeLayout>

<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:src="@drawable/top"-->
<!--            android:scaleType="fitXY"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#000000" />
        <LinearLayout
            android:id="@+id/tab_menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_message_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_bg"
                android:drawableTop="@drawable/tab_menu_message"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:textColor="@drawable/tab_menu_message_text"
                android:text="消息"/>

            <TextView
                android:id="@+id/text_my_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_menu_bg"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/tab_menu_my"
                android:gravity="center"
                android:textColor="@drawable/tab_menu_my_text"
                android:text="我的"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>